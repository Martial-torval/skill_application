{% extends "layout/default.html.twig" %}

{% block body %}
	<section class="section-1">
		<h1 class="confirme">Confirme tes compétences en
			<br>
			<span class="typewrite" data-period="2000" data-type='[ "web design","developpement web","système et réseaux","devOps" ]'></span>
		</h1>
		<div class="illustration">
			<img src="/assets/img/illu.svg" alt="" width="700px">
		</div>
	</section>

	<div class="ensavoirplus">
		<p><img src="/assets/img/arrow.png" alt="" width="15px">
			En savoir plus</p>
	</div>

	<h1 class="prochaine">Les prochaines sessions</h1>

	<section class="section-2">


		<div class="examens">

			{% for examen in examens | sort((a, b) => a.date <=> b.date) %}
						{% if examen.competences.title == "Web Design" %}
							<div class="design">
							{% elseif examen.competences.title =="Développeur web"%}
							<div class="dev">
							{% elseif examen.comeptences.title =="Système & Réseaux"%}
							<div class="reseau">
							{% elseif examen.competences.title =="DevOps"%}
							<div class="devops">
							{% endif %}
								<div class="date">
									<p>{{examen.city}}</p>
									<p>{{examen.date| date('d/m/Y')}}</p>
								</div>
								<div class="image">
									<img src="/assets/img/Group 21.svg" alt="">
								</div>
								<hr>
								<div class="domaine">
									<p>{{examen.competences.title}}</p>
									<p>{{examen.competences.subtitle}}</p>
									<a id="webdesign">
										<small class="plus">En savoir plus</small>
									</a>

									<div id="myModal" class="modal">
										<div class="modal-content">
											<span class="close">&times;</span>
											<h3 class="titre-exam">{{examen.competences.title}}</h3>
											<p>{{examen.competences.description}}</p>
										</div>
									</div>
								</div>
							</div>
						{% endif %
			{% endfor %}

		</section>

		<div class="voir">
			<a href="{{path('session')}}">
				<p>Voir tous les examens ></p>
			</a>
		</div>

	{% endblock %}
