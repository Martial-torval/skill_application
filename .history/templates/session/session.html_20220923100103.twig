{% extends "layout/default.html.twig" %}

{% block body %}
	<div>
		<h1 class="prochaine">Trouve ta prochaine session</h1>
	</div>

	<section class="section-2">

<div class="examens">		

			{% for examen in examens | sort((a, b) => a.date <=> b.date)  %}

				{% if loop.index < 5 %}
				{% if examen.title == "Web Design" %}

				
					<div class="design">
						<div class="date">
							<p>{{examen.city}}</p>
							<p>{{examen.date| date('d/m/Y')}}</p>
						</div>
						<div class="image">
							<img src="/assets/img/Group 21.svg" alt="">
						</div>
						<hr>
						<div class="domaine">
							<p>{{examen.title}}</p>
							<p>{{examen.subtitle}}</p>
							<a class="signup" href="/session">S'inscrire &gt;</a>
						</div>
					</div>
					{% endif %}


                {% if examen.title == "Développeur Web" %}
				 <div class="dev">
			                <div class="date">
			                    <p>Lyon 8</p>
			                    <p>25/09/2022</p>
			                </div>
			                <div class="image">
			                    <img src="/assets/img/Group 21.svg" alt="">
			                </div>
			                <hr>
			                <div class="domaine">
			                    <p>Développement Web</p>
			                    <p>Angular</p>
			                    <a  class="signup" href="/session" >S'inscrire &gt;</a>
			                </div>
			            </div>
				{% endif %}

                {% if examen.title == "Système & Réseaux" %}
				 <div class="reseau">
			                <div class="date">
			                    <p>Lyon 6</p>
			                    <p>22/09/2022</p>
			                </div>
			                <div class="image">
			                    <img src="/assets/img/Group 21.svg" alt="">
			                </div>
			                <hr>
			                <div class="domaine">
			                    <p>Système et réseaux</p>
			                    <p>Switch</p>
			                    <a  class="signup" href="/session" >S'inscrire &gt;</a>
			                </div>
			            </div>
					{% endif %}

                {% if examen.title == "DevOps" %}

				 <div class="devops">
			                <div class="date">
			                    <p>Lyon 6</p>
			                    <p>22/09/2022</p>
			                </div>
			                <div class="image">
			                    <img src="/assets/img/Group 21.svg" alt="">
			                </div>
			                <hr>
			                <div class="domaine">
			                    <p>DevOps</p>
			                    <p>Bonne question</p>
			                   <a  class="signup" href="/session" >S'inscrire &gt;</a>
			                </div>
			            </div>
						{% endif %}
			{% endfor %}
			
{% endblock %}
